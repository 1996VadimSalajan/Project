
@{
    ViewBag.Title = "AddPhoto";
}
<div>
    @Html.Partial("_VerticalBar")
</div>
@using (Html.BeginForm("AddPhoto", "UserProfile", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Add Photo.</h4>
    <hr />
    <script src="~/Scripts/UploadImage.js" type="text/javascript"></script>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            <input type="file" onchange="Upload()" name="Photo" id="fileUpload" />

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <button id="upload" type="submit" value="Upload" style="height:35px;" class="btn">Save</button>
            @Html.ValidationMessage("Photo")
        </div>
    </div>
}

@model WebApplication3.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "FirstName", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @placeholder = "LastName", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "ConfirmPassword", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m =>m.TypeUser, htmlAttributes:
                  new {
                        @class = "form-control"
                      })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.ValidationMessageFor(m =>m.TypeUser, "",
                  new {
                        @class = "text-danger"
                      })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <button type="submit" style="height:35px;" class="btn">Register</button>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
